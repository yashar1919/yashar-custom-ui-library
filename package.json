{
  "name": "yashar-ui",
  "private": false,
  "version": "1.1.0",
  "type": "module",
  "main": "./dist/yashar-ui.umd.cjs",
  "module": "./dist/yashar-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/yashar-ui.js",
      "require": "./dist/yashar-ui.umd.cjs"
    },
    "./style.css": {
      "types": "./dist/style.d.ts",
      "default": "./dist/yashar-ui.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "npm run clean && npx tsc -p tsconfig.lib.json && npx vite build --mode library && npm run copy-types",
    "copy-types": "copy src\\style.d.ts dist\\style.d.ts",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
